const { SlashCommandBuilder } = require('@discordjs/builders');
const { MessageEmbed } = require('discord.js');
const mongoose = require('mongoose');
const Player = require('../mongo/player.js');

const commandBuilder = new SlashCommandBuilder()
    .setName('setrank')
    .setDescription('(RANK 1+ ONLY) - Set an accounts level')
    .addUserOption((option) =>
    option.setName('user')
        .setDescription('Account you want to edit')
        .setRequired(true))
    .addIntegerOption((option) =>
    option.setName('level')
        .setDescription('level you want to set')
        .setRequired(true));

module.exports = {
	data: commandBuilder,
	async execute(interaction) {
        mongoose.connect('mongodb://localhost/data', { useNewUrlParser: true, useUnifiedTopology: true });
        if (await Player.exists({ id: interaction.user.id }) || interaction.user.id == global.botOwner) {
            const executor = await Player.findOne({ id: interaction.user.id });
            if (executor.rank >= 1 || interaction.user.id == global.botOwner) {
                const user = interaction.options.getUser('user');
                const level = interaction.options.getInteger('level');
                const levelEmbed = new MessageEmbed()
                    .setAuthor('Updated Player Level', `https://cdn.discordapp.com/avatars/${user.id}/${user.avatar}.png`)
                    .setDescription(`${user.username}#${user.discriminator} is now level ${level}`)
                    .setColor(global.color);
                Player.updateOne({ id: user.id }, { level: level })
                    .then(() => interaction.reply({ embeds: [levelEmbed] }))
                    .catch(e => console.log(`(setlevel.js) Updater Error: ${e}`));
            } else {
                interaction.reply("Not Allowed")
                    .then(() => interaction.deleteReply());
            }
        } else  {
            interaction.reply("Invalid")
                .then(() => interaction.deleteReply());
        }
	},
};